<div class="container">
  <div class="row">
    <div class="col-lg-8 col-md-10 mx-auto">
      <h2>Log in</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group row">
          <%= f.label :email, class: "col-sm-2 col-form-label" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-sm-10" %>
        </div>

        <div class="form-group row">
          <%= f.label :password, class: "col-sm-2 col-form-label" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "col-sm-10" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-group">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="clearfix">
          <%= f.submit "Log in", class: "btn btn-primary" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
